{% extends 'admin/base.html.twig' %}

{% block title %}Détail de la commande
{% endblock %}

{% block body %}
	<h1>Détail de la commande</h1>

	<p>
		<strong>ID:</strong>
		{{ commande.id }}</p>
	<p>
		<strong>Date:</strong>
		{{ commande.dateCommande|date('d/m/Y') }}</p>
	<p>
		<strong>Client:</strong>
		{{ commande.user.nom }}</p>
	<p>
		<strong>Total:</strong>
		{{ commande.montantTotal }}
		DT</p>

	<a href="{{ path('app_commandes_all') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
